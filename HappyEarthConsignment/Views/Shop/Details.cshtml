                <h6 class="card-title">Brand</h6>
                <p class="card-text">@Html.DisplayFor(model => model.Brand)</p>
                <h6 class="card-title">@Html.DisplayNameFor(model => model.Description)</h6>
                <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                <h6 class="card-title">Date Listed</h6>
                <p class="card-text">@Model.Created.ToString("d")</p>
                <h6 class="card-title">Category</h6>
                <p class="card-text">@Html.DisplayFor(model => model.Category.Name)</p>
            </div>


