<div class="text-center">
    @*<h6>Details for @Model.Name</h6>*@

    <div class="card border-info mb-3" style="max-width: 40rem; margin:0 auto">
        <div class="card-header" style="font-weight: bold">@Html.DisplayFor(model => model.Name)</div>
            <div class="card-body text-dark">
                @*<h6 class="card-title">Image</h6>*@
                <img src="@Model.Photo" height="100" width="100" alt="@Model.Name" />
